@using Betly.core.Models
@{
    ViewData["Title"] = "My Friends";
    var friends = ViewBag.Friends as List<Friendship>;
    var requests = ViewBag.Requests as List<Friendship>;
}

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        background-color: #e9ecef;
        color: #495057;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.1rem;
    }
    .list-group-item-action:hover {
        background-color: #f8f9fa;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>My Friends</h2>
                <span class="text-muted">Account: <strong>@User.Identity?.Name</strong></span>
            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            @if (friends != null && friends.Any())
            {
                <div class="list-group shadow-sm">
                    @foreach (var f in friends)
                    {
                        var friendUser = f.RequesterId.ToString() == User.FindFirst("UserId")?.Value ? f.Addressee : f.Requester;
                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
                             <div class="d-flex align-items-center">
                                <div class="avatar-circle me-3">@friendUser?.Email[0].ToString().ToUpper()</div>
                                <div>
                                    <h6 class="mb-0">@(friendUser?.Email ?? "Unknown User")</h6>
                                    <small class="text-muted">Friends since @f.CreatedAt.ToShortDateString()</small>
                                </div>
                            </div>
                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3">Friend</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 border rounded bg-light shadow-sm">
                    <div class="display-6 mb-3 text-muted">ü§ù</div>
                    <h4>No friends yet!</h4>
                    <p class="text-muted">Start connecting with other users by sending a friend request.</p>
                </div>
            }
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">Add Friend</div>
                <div class="card-body">
                    <form asp-action="AddFriend" method="post">
                        <div class="mb-3">
                            <label class="form-label">Friend's Email</label>
                            <input type="email" name="email" class="form-control" required placeholder="user@example.com" />
                        </div>
                        <button type="submit" class="btn btn-success w-100">Send Request</button>
                    </form>
                </div>
            </div>

            @if (requests != null && requests.Any())
            {
                <div class="card">
                    <div class="card-header bg-warning">Pending Requests</div>
                    <ul class="list-group list-group-flush">
                        @foreach (var r in requests)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>From: <strong>@r.Requester?.Email</strong></span>
                                    <form asp-action="AcceptFriend" method="post" class="d-inline">
                                        <input type="hidden" name="requestId" value="@r.Id" />
                                        <button type="submit" class="btn btn-sm btn-primary">Accept</button>
                                    </form>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
