@model Betly.Mvc.Models.DashboardViewModel

@{
    ViewData["Title"] = "Account Dashboard";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>My Account</h2>
            <p class="text-muted">Welcome, @Model.User.Email</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="card bg-light border-success">
                <div class="card-body">
                    <h5 class="card-title text-success">Balance: @Model.User.Balance.ToString("C")</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="AddCredit" class="btn btn-success btn-sm mt-2">Add Credit</a>
                        <a asp-controller="Events" asp-action="Create" class="btn btn-outline-primary btn-sm mt-1">Create Event</a>
                        <a asp-controller="Events" asp-action="MyEvents" class="btn btn-outline-info btn-sm mt-1">My Events</a>
                        <a asp-controller="Account" asp-action="Friends" class="btn btn-primary btn-sm mt-1 shadow-sm">Manage Friends</a>
                        <a asp-controller="Account" asp-action="History" class="btn btn-outline-dark btn-sm mt-1">Transaction History</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">My Bets</h4>
                    <a asp-controller="Events" asp-action="Index" class="btn btn-primary btn-sm">Place New Bet</a>
                </div>
                <div class="card-body">
                    @if (Model.Bets != null && Model.Bets.Any())
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Event</th>
                                    <th>Pick</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bet in Model.Bets)
                                {
                                    <tr>
                                        <td>Event #@bet.EventId</td> <!-- Ideally fetch Event Title too, but requires joined data -->
                                        <td>@bet.SelectedOutcome</td>
                                        <td>@bet.Amount.ToString("C")</td>
                                        <td>
                                            <span class="badge @(bet.Outcome == "Won" ? "bg-success" : bet.Outcome == "Lost" ? "bg-danger" : "bg-warning text-dark")">
                                                @bet.Outcome
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted text-center my-4">You have no bets yet. <a asp-controller="Events" asp-action="Index">Start betting!</a></p>
                    }
                </div>
            </div>
            
            <div class="mt-4">
                 <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-danger">Logout</a>
            </div>
        </div>
    </div>
</div>
