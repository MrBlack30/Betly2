@model List<Betly.core.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<div class="container mt-4">
    <h2>My Events</h2>
    <p>Manage the events you have created.</p>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You haven't created any events yet. <a asp-action="Create">Create one now!</a></div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Stats</th>
                        <th>Title</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th>Winner</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>
                                <strong>@item.Title</strong><br/>
                                <small class="text-muted">@item.TeamA vs @item.TeamB</small>
                            </td>
                            <td>@item.Date.ToShortDateString()</td>
                            <td>
                                @if (item.IsResolved)
                                {
                                    <span class="badge bg-secondary">Resolved</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td>@(item.IsResolved ? item.Winner : "-")</td>
                            <td>
                                @if (!item.IsResolved)
                                {
                                    <a asp-action="Resolve" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Resolve Event</a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>Resolved</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
