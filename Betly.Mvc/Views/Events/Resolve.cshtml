@model Betly.core.Models.Event

@{
    ViewData["Title"] = "Resolve Event";
}

<div class="container mt-4">
    <h2>Resolve Event: @Model.Title</h2>
    <p>@Model.Description</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Select Winner</h5>
                    <form asp-action="Resolve" method="post">
                        <input type="hidden" name="EventId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Winning Outcome</label>
                            <select name="WinningOutcome" class="form-select" required>
                                <option value="">-- Select Winner --</option>
                                <option value="TeamA">@Model.TeamA</option>
                                <option value="TeamB">@Model.TeamB</option>
                                <option value="Draw">Draw</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-warning w-100">Confirm Resolution</button>
                    </form>
                    <div class="mt-3">
                        <span class="text-danger">Warning: This action cannot be undone. Winners will be paid out immediately.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
